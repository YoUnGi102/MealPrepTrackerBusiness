{
  "name": "backend",
  "version": "1.0.0",
  "description": "Business layer for the project MealPrepTracker",
  "homepage": "https://github.com/YoUnGi102/MealPrepTrackerBusiness#readme",
  "bugs": {
    "url": "https://github.com/YoUnGi102/MealPrepTrackerBusiness/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YoUnGi102/MealPrepTrackerBusiness.git"
  },
  "license": "ISC",
  "author": "YoUnGi102",
  "type": "module",
  "main": "src/server.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "node dist/server.js",
    "build": "tsup",
    "ci": "npm ci && npm run format && npm run test:unit && npm run lint",
    "test:unit": "jest --config jest.config.unit.ts",
    "test:integration": "mocha -r ts-node/register tests/**/*.test.ts",
    "bdd": "cucumber-js tests/bdd/features",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "swagger": "tsx src/config/swagger.config.ts",
    "typeorm": "node --loader ts-node/esm ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d dist/data-source.js src/database/migrations/Init",
    "migration:run": "npm run typeorm -- migration:run -d dist/data-source.js",
    "migration:revert": "npm run typeorm -- migration:revert -d dist/data-source.js"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.22",
    "typescript-eslint": "^8.31.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^5.2.1",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "chai": "^5.2.0",
    "chai-http": "^5.1.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-transform-paths": "^3.5.5"
  }
}
