{
  "name": "backend",
  "version": "1.0.0",
  "description": "Business layer for the project MealPrepTracker",
  "homepage": "https://github.com/YoUnGi102/MealPrepTrackerBusiness#readme",
  "bugs": {
    "url": "https://github.com/YoUnGi102/MealPrepTrackerBusiness/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YoUnGi102/MealPrepTrackerBusiness.git"
  },
  "license": "ISC",
  "author": "YoUnGi102",
  "type": "module",
  "main": "src/server.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "node dist/server.js",
    "build": "tsup src --out-dir dist --format esm --dts",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "bdd": "cucumber-js tests/bdd/features",
    "ci": "npm ci && npm run test && npm run bdd",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migration:generate": "npm run typeorm -- migration:generate -d src/data-source.ts src/database/migrations/Init",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm -- migration:run -d src/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/data-source.ts"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22",
    "typescript-eslint": "^8.31.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@types/chai": "^5.2.1",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "chai": "^5.2.0",
    "chai-http": "^5.1.1",
    "cross-env": "^7.0.3",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
