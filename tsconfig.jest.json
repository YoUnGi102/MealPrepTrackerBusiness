{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@src/": ["src/*"]
    }
  },
  "include": ["tests/**/*.ts", "src/**/*.ts"]
}
