{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "CommonJS",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@database/*": ["src/database/*"],
      "@logic/*": ["src/logic/*"],
      "@repositories/*": ["src/repositories/*"],
      "@utils/*": ["src/logic/utils/*"]
    }
  },
  "include": ["tests/**/*.ts", "src/**/*.ts"]
}
