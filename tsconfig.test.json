{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist-test",
      "types": ["jest", "node"],
      "typeRoots": ["./node_modules/@types"]
    },
    "include": [
      "tests/**/*",
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "tests/dist"
    ]
  }
  